<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bcf6eddd">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="999:59: "
            android:id="@+id/timeStamp"
            android:textSize="18dp"
            android:textColor="#fff"
            android:background="#5E9EC9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/note"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/delete"
            android:background="@android:drawable/ic_menu_delete"
            android:backgroundTint="#bdf5a9a9"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:backgroundTintMode="multiply" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/edit"
            android:background="@android:drawable/ic_menu_edit"
            android:backgroundTint="#b95e9ec9"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/delete"
            android:layout_toStartOf="@+id/delete"
            android:backgroundTintMode="multiply" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/note"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="#68ffffff"
            android:paddingLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/timeStamp"
            android:layout_toEndOf="@+id/timeStamp"
            android:layout_toStartOf="@+id/edit"
            android:paddingBottom="10dp" />

    </RelativeLayout>

</LinearLayout>